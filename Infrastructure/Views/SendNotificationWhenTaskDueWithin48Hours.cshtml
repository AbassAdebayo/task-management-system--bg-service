@model Infrastructure.Messaging.Models.NotificationWhenTaskDueWithin48HoursViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Task Due Notification</title>
    <style>
        /* Reset styles */
        body,
        body * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        /* Global styles */
        body {
            background-color: #f5f5f5;
            color: #333;
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
            text-align: left;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header styles */
        .header {
            background-color: #eee;
            border-bottom: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

        /* Content styles */
        .content {
            background-color: #fff;
            border: 1px solid #ccc;
            padding: 20px;
        }

        /* Footer styles */
        .footer {
            background-color: #eee;
            border-top: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Task Due Notification</h1>
        </div>
        <div class="content">
            <p>Hello @Model.Name,</p>
            <p>We wanted to remind you that you have tasks due within the next 48 hours:</p>
            <ul>
                @foreach (var task in Model.DueTasks)
                {
                    <li>
                        <strong>@task.Tittle:</strong> Due on @task.DueDate.ToShortDateString()
                    </li>
                    <li>
                        <h5>Description:</h5> @task.Description
                    </li>
                    <li>
                        <h5>Priority:</h5> @task.Description
                    </li>
                }
            </ul>
            <p>Please make sure to complete these tasks on time.</p>
        </div>
        <div class="footer">
            <p>&copy; @DateTime.UtcNow.Year StackBuld. All rights reserved.</p>
        </div>
    </div>
</body>
</html>
